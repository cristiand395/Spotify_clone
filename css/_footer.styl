.footer
    background-color: footer-color
    width: 100vw
    height: 90px
    position: absolute
    left: 0px
    bottom: 0px
    display: flex
    align-items: center
    justify-content: space-between
    .song-info
        width: 472px
        margin-left: 16px
        display: flex
        align-items: center
        .album
            width: 56px
            height 56px
            img 
                width: 100%
                height 100%
        .song-name
            margin-left: 15px
            p
                color: font-color1
                font-size: 12px
                margin: 0px
                margin-bottom: 4px
            p:nth-child(1)
                font-size: 14px
                font-weight: bolder
        .like
            width: 18px
            height: 17px
            margin-left: 25px
            img
                width: 100%
                height: 100%
    .song-button
        width: 722px
        height 60px
        display: flex
        justify-content: center
        .time
            width: 40px
            display: flex
            align-items: flex-end
            text-align: center
            color: font-color1
            font-size: 12px
            margin-left: 15px
        .controls
            width: 720px
            &__top
                width: 100%
                display: flex
                justify-content: center
                margin-bottom: 19px
                &__container
                    display: flex
                    align-items: center
                    justify-content: space-evenly
                    width: 224px
                    .controls-button
                        display: flex
                        justify-content: center
                        align-items: center
                        width: 32px
                        height: 32px
                        img
                            width: 10px
                            height 13px
                        .play
                            width: 100%
                            height 100%
            &__botton
                width: 100%
                height 3px
                hr
                    background-color: font-color1
                    border: none 
                    height: 3px
    .song-volume
        width: 372px
        height: 32px
        display: flex
        justify-content: flex-end
        padding-right: 16px
        align-items: center
        div
            width: 30px
            height 15px
            img
                width: 15px
                height 13px
        .volumen
            width: 84px
            margin-bottom: 3px
            hr
                background-color: font-color1
                border: none 
                height: 3px
