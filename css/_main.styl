.main
    width: 100%
    height: 100vh
    background: background-main
    padding-right: 28px
    overflow: scroll
    &__header
        width: 100%
        height: 340px
        .navbar
            height: 32px
            width: 100%
            display: flex
            justify-content: space-between
            &__buttons
                height: 100%
                width: 80px
                display: flex
                justify-content: space-between
                margin-left: 28px
                margin-top: 15px
                div
                    height: 32px
                    width: 32px
                    background-color: rgba(0,0,0,0.70)
                    border-radius: 50%
                    display: flex
                    justify-content: center
                    align-items: center
                    img
                        width: 11px
                        height 17px
            &__account
                height: 85%
                width: 130px
                display: flex
                justify-content: space-between
                align-items: center
                background-color: rgba(0,0,0,0.75)
                border-radius: 15px
                padding: 3px 5px
                padding-right: 9px
                margin-top: 15px
                img
                    width: 25px
                    height: 25px
                .account-settings
                    width: 13px
                    height: 7px
                p
                    color: white
                    font-size: 15px
        .album-information
            width: 100%
            height: 232px
            margin-top: 50px
            margin-left: 28px
            display: flex
            align-items: flex-end
            &__left
                width: 232px
                height: 232px
                img
                    width: 232px
                    height: 232px
                    box-shadow: 0 4px 60px rgba(0,0,0,.5)
            &__right
                width: 100%
                height: 200px
                margin-left: 20px
                align-items: flex-end
                p
                    color: white
                .type
                    width: 100%
                    height: 20px
                    margin-top: 28px
                    p
                        font-size: 14px
                        font-weight: bold
                .type-name
                    width: 100%
                    height: 100px
                    p
                        font-size: 96px
                        margin: 0px
                        font-weight: bolder
                .meta
                    width: 100%
                    height: 14px
                    display: flex
                    align-items: center
                    margin-top: 33px
                    font-weight: bold
                    img
                        border-radius: 50%
                        width: 24px
                        height 24px
                        margin-right: 5px
                    a
                        color: white
                        text-decoration: none
                        font-size: 13px
                        margin-right: 8px
                        font-weight: bold
                    p
                        font-size: 13px
                        color: font-color1
    &__songs
        width: 100%
        height: 100%
        background-color: rgba(0,0,0,0.20)
        padding: 24px 28px
        padding-right: 28px
        &__buttons
            display: flex
            align-items: center
            img
                margin-right: 32px
        .songlist
            width: 100%
            height: 100%
            .song
                width: 100%
                height: 45px
                display: grid
                grid-template-columns: 42px 1fr 54px
                margin-top: 20px
                .song-icon
                    height: 100%
                    width: 42px
                    display: flex
                    align-items: center
                    img
                        width: 12px
                        height: 16px
                        margin-left: 17px
                        margin-bottom: 18px
                .song-details
                    p
                        margin: 6px 0px
                        font-size: 12px
                        color: font-color1
                    .title
                        font-size: 14px
                        color: white
                        font-weight: bold
                .song-time
                    display: flex
                    justify-content: flex-start
                    align-items: center
                    p
                        color: font-color1
                        font-size: font-size1

.main::-webkit-scrollbar-track
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1);
    border-radius: 10px;
    background-color: rgba(0,0,0,0.1);
.main::-webkit-scrollbar
    width: 12px;
    background-color: rgba(0,0,0,0.1);
.main::-webkit-scrollbar-thumb
    border-radius: 0px;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
    background-color: rgba(250,250,250,0.4);