.menu 
    width: 238px
    background-color: menu-background-color
    padding-left: 24px
    padding-top: 24px
    color: font-color1
    p
        font-weight: bold
    .icon-container
        width: 100%
        height 50px
        margin-bottom: 10px
        img
            width: 131px
            height: 40px
    .options-container
        .option 
            display: flex
            align-items: center
            img
                margin-right: 15px
        .create
            margin-bottom: 5px
        .liked
            margin-bottom: 12px
    hr     
        background-color: font-color1
        border: none 
        height: 1px
        margin-bottom: 5px
    .menu-hr
        width: 190px
        height 1px
        hr
            border: none
            height 0.5px
    .playlist
        overflow-y: scroll
        height 510px
        p
            margin-top: 18px
    .playlist::-webkit-scrollbar-track
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
        border-radius: 10px;
        background-color: menu-background-color;
    .playlist::-webkit-scrollbar
        width: 12px;
        background-color: menu-background-color;
    .playlist::-webkit-scrollbar-thumb
        border-radius: 0px;
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
        background-color: rgb(80,80,80);